<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.DNote" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/accentColor</item>
        <item name="android:colorBackground">@color/backgroundColor</item>
    </style>

    <!-- Custom TimePickerDialog style -->
    <style name="CustomTimePickerDialog" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="materialTimePickerStyle">@style/Widget.MaterialComponents.TimePicker</item>

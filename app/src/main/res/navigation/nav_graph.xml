<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.dnote.Home"
        android:label="Home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_folderDetailFragment"
            app:destination="@id/folderDetailFragment">
            <argument
                android:name="folderName"
                app:argType="string" />
        </action>
    </fragment>

    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.dnote.Settings"
        android:label="Settings"
        tools:layout="@layout/fragment_settings" />
    <fragment
        android:id="@+id/folderDetailFragment"
        android:name="com.example.dnote.FolderDetailFragment"
        android:label="Folder Detail"
        tools:layout="@layout/fragment_folder_detail">
        <argument
            android:name="folderName"
            app:argType="string" />
    </fragment>

</navigation>
